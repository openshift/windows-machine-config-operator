{
  "variables": {
    "os-iso-path": "[WorkloadDatastore] windows-iso-images/winsrv2022_sep_2021_x64_dvd.iso",
    "vmtools-iso-path": "[WorkloadDatastore] windows-iso-images/vmtools-v11360-windows.iso",
    "vm-template-folder": "windows-golden-images",
    "vm-template-name": "windows-server-2022-template-test",
    "vm-elevated-user": "Administrator",
    "vm-elevated-password": "WindowsPassword",
    "vsphere-cluster": "Cluster-1",
    "vsphere-datacenter": "SDDC-Datacenter",
    "vsphere-datastore": "WorkloadDatastore",
    "vsphere-server": "vcenter.example.com",
    "vsphere-user": "vcenter_username",
    "vsphere-password": "vcenter_password"
  },
  "sensitive-variables": [
    "vsphere-password",
    "vm-elevated-password"
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/rename-computer.ps1",
      "destination": "C:/"
    },
    {
      "type": "powershell",
      "script": "scripts/install-firewall-rules.ps1",
      "elevated_user": "{{user `vm-elevated-user`}}",
      "elevated_password": "{{user `vm-elevated-password`}}"
    },
    {
      "type": "powershell",
      "script": "scripts/install-docker.ps1",
      "elevated_user": "{{user `vm-elevated-user`}}",
      "elevated_password": "{{user `vm-elevated-password`}}"
    },
    {
      "type": "powershell",
      "script": "scripts/install-updates.ps1",
      "elevated_user": "{{user `vm-elevated-user`}}",
      "elevated_password": "{{user `vm-elevated-password`}}"
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "script": "scripts/install-updates.ps1",
      "elevated_user": "{{user `vm-elevated-user`}}",
      "elevated_password": "{{user `vm-elevated-password`}}"
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "pause_before": "2m",
      "inline": ["dir c:\\"],
      "elevated_user": "{{user `vm-elevated-user`}}",
      "elevated_password": "{{user `vm-elevated-password`}}"
    }
  ],
  "builders": [
    {
      "CPUs": "4",
      "RAM": "16384",
      "RAM_reserve_all": true,
      "communicator": "ssh",
      "convert_to_template": "true",
      "cluster": "{{user `vsphere-cluster`}}",
      "vcenter_server": "{{user `vsphere-server`}}",
      "datacenter": "{{user `vsphere-datacenter`}}",
      "datastore": "{{user `vsphere-datastore`}}",
      "disk_controller_type": "lsilogic-sas",
      "firmware": "bios",
      "floppy_files": [
        "answer-files/autounattend.xml",
        "answer-files/unattend.xml",
        "scripts/authorized_keys",
        "scripts/install-vm-tools.cmd",
        "scripts/configure-vm-tools.ps1",
        "scripts/install-openssh.ps1",
        "scripts/rename-computer.ps1"
      ],
      "vm_version": 15,
      "guest_os_type": "windows9Server64Guest",
      "insecure_connection": "true",
      "iso_paths": [
        "{{user `os-iso-path`}}",
        "{{user `vmtools-iso-path`}}"
      ],
      "network_adapters": [
        {
          "network": "dev-segment",
          "network_card": "vmxnet3"
        }
      ],
      "storage": [
        {
          "disk_size": "61440",
          "disk_thin_provisioned": true
        }
      ],
      "type": "vsphere-iso",
      "folder": "{{user `vm-template-folder`}}",
      "vm_name": "{{user `vm-template-name`}}",
      "username": "{{user `vsphere-user`}}",
      "password": "{{user `vsphere-password`}}",
      "ssh_password": "{{user `vm-elevated-password`}}",
      "ssh_username": "{{user `vm-elevated-user`}}",
      "ssh_timeout": "10m",
      "shutdown_command": "c:\\windows\\system32\\sysprep\\sysprep.exe /generalize /oobe /shutdown /unattend:a:\\unattend.xml"
    }
  ]
}
