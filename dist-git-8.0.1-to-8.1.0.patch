From: Skyler Clark <skylerjaneclark@gmail.com>
Date: Mon, 10 Jul 2023 12:22:28 -0400
Subject: [PATCH] [release-4.13] Prepare for 8.1.0 release

  This commit was generated by hack/pre-release.sh

Signed-off-by: Skyler Clark <skylerjaneclark@gmail.com>
---
 Dockerfile       | 2 +-
 render_templates | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/Dockerfile b/Dockerfile
index 6a93a28..ddfe25e 100644
--- a/Dockerfile
+++ b/Dockerfile
@@ -24,7 +24,7 @@ LABEL com.redhat.openshift.versions="=v4.13"
 LABEL com.redhat.delivery.backport=false
 
 # This label gets replaced by render_templates, so it is safer to keep it on its own
-LABEL version="v8.0.1"
+LABEL version="v8.1.0"
 
 # This label maps to the brew build target
 LABEL com.redhat.component="windows-machine-config-operator-bundle-container"
diff --git a/render_templates b/render_templates
index 0c25692..e526ec6 100755
--- a/render_templates
+++ b/render_templates
@@ -45,7 +45,7 @@ update_csv() {
     sed -i "s|REPLACE_IMAGE|${wmco_image_sha}|g" ${csv}
     # Following command adds the replaces field in the CSV using the previous released version of the operator.
     # TODO: Uncomment below for next minor release
-    # sed -i '/version: 8.0.1/i \  replaces: '${wmco}'.v'${previous_version}'' ${csv}
+    # sed -i '/version: 8.1.0/i \  replaces: '${wmco}'.v'${previous_version}'' ${csv}
     sed -i "s|REPLACE_DATE|`date "+%Y-%m-%dT%H:%M:%SZ"`|g" ${csv}
     sed -i "/command:/d" ${csv}
     awk '{print} sub(/- args:/,"- command:")' ${csv} > tmp && mv tmp ${csv}
@@ -85,7 +85,7 @@ wmco_image_sha=`echo ${build_info} | jq -e .extra.image.index.pull[0]`
 wmco="windows-machine-config-operator"
 csv="manifests/${wmco}.clusterserviceversion.yaml"
 # TODO: Uncomment below for next minor release
-previous_version="8.0.0"
+previous_version="8.0.1"
 update_csv ${temp_dir}/${csv} $wmco_image_sha
 update_dockerfile ${temp_dir}/Dockerfile $version
 
